        <image class="avatar" src="{{userinfo.avatarUrl}}" />
        <view>
            {{userInfo.nickName}}
        </view>
    </view>
    <view wx:else>
    <!-- <view> -->
        <image class="avatar" src="http://pic.616pic.com/ys_bnew_img/00/53/11/dhsAzYoGFW.jpg" />
        <!-- <mp-icon icon="add" color="black" size="{{25}}"></mp-icon> -->
